<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="10dp"
    >
    <com.duomizhibo.phonelive.widget.BlackTextView
        android:id="@+id/tv_order_item_u_no"
        android:layout_gravity="center"
        android:text="NO.7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.duomizhibo.phonelive.widget.CircleImageView
        android:id="@+id/ci_order_item_u_head"
        android:layout_margin="7dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/view_order_item_public"></include>

    </LinearLayout>
</LinearLayout>