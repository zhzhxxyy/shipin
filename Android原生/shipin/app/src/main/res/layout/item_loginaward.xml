<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_blue"
                android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_blue"/>

    <ImageView
        android:id="@+id/bling_bling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/sel"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/login_award_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/star2"/>

    <TextView
        android:id="@+id/login_award_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_10"
        android:gravity="center"
        android:text="第一天"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/login_award_coin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_blue1"
        android:gravity="center"
        android:paddingBottom="@dimen/space_5"
        android:paddingTop="@dimen/space_5"
        android:text="X 20"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/login_award_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/lq"
        android:visibility="gone"/>

</RelativeLayout>