<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <com.duomizhibo.phonelive.ui.customviews.MyImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <com.duomizhibo.phonelive.widget.AvatarView
        android:id="@+id/av_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/img"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/av_head"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:textColor="#fff"
        android:textSize="12sp"
        />

    <ImageView
        android:id="@+id/location"
        android:layout_width="14dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/distance"
        android:layout_toLeftOf="@id/distance"
        android:adjustViewBounds="true"
        android:src="@drawable/dingwei"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/av_head"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/location"
        android:layout_toRightOf="@id/av_head"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/av_head"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="#fff"
        android:textSize="16sp"
        />

</RelativeLayout>