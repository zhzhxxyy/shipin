<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_animation_plain_root"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="70dp">
    <!--头像-->
   <com.duomizhibo.phonelive.widget.AvatarView
       android:layout_centerHorizontal="true"
        android:id="@+id/iv_animation_head"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/tv_liwu_name"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_animation_plain"
        android:background="@drawable/plan0001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_alignBottom="@id/iv_animation_plain"
        android:layout_centerInParent="true"
        android:background="@drawable/plane_shadow"
        android:layout_width="200dp"
        android:layout_height="150dp" />
    <RelativeLayout
        android:layout_marginTop="150dp"
        android:layout_alignParentRight="true"
        android:id="@+id/rl_animation_flower"
        android:layout_width="300dp"
        android:layout_height="500dp">

    </RelativeLayout>
</RelativeLayout>