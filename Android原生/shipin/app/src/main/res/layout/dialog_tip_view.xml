<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="260dip"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_tip_bg"
        android:minWidth="260dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:textColor="#4A4A4A"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dip"
            android:text="提示"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"/>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                android:textSize="16sp"
                android:textColor="#202020"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_top_view_bg_normal"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.3"
                android:minHeight="80dip"
                android:padding="10dip"
                android:text="提示信息"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D8D8D8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:textSize="14sp"
                android:textColor="#202020"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_bottom_left_view_bg_selector"
                android:gravity="center"
                android:text="取消"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#D8D8D8"/>

            <TextView
                android:id="@+id/ok"
                android:textSize="14sp"
                android:textColor="#202020"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_bottom_right_view_bg_selector"
                android:gravity="center"
                android:text="确定"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>