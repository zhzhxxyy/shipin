<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:hehe="http://schemas.android.com/apk/res-auto"

    >

    <ImageView
        android:layout_margin="3dp"
        android:id="@+id/iv_newest_item_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_weight="0.98"/>

    <ImageView
        android:id="@+id/iv_news_bg"
        android:background="@drawable/bg_news_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:layout_margin="@dimen/space_10"
        android:id="@+id/iv_live_new_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />

    <RelativeLayout

        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_live_new"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>


</RelativeLayout>