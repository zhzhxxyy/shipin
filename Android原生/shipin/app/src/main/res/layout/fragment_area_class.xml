<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/choice_sex_top"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <com.duomizhibo.phonelive.widget.BlackTextView
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_19"
            android:text="性别"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="-30dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:weightSum="3">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_choice_femal"
                android:src="@drawable/choice_sex_un_femal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.duomizhibo.phonelive.widget.BlackTextView
                android:id="@+id/tv_choice_femal"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/home_page_text_color"
                android:text="♡ 只看女"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_choice_all"
                android:src="@drawable/choice_sex_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.duomizhibo.phonelive.widget.BlackTextView
                android:id="@+id/tv_choice_all"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/global"
                android:text="♡ 看全部"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_choice_male"
                android:src="@drawable/choice_sex_un_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.duomizhibo.phonelive.widget.BlackTextView
                android:id="@+id/tv_choice_male"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/home_page_text_color"
                android:text="♡ 只看男"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/choice_area_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <com.duomizhibo.phonelive.widget.BlackTextView
            android:layout_marginBottom="3dp"
            android:textColor="@color/home_page_text_color"
            android:text="地区"
            android:textSize="@dimen/text_size_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <ImageView
        android:src="@drawable/choice_area_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lv_area"
        android:layout_width="match_parent"
        android:layout_height="270dp">
    </ListView>
    <com.duomizhibo.phonelive.widget.BlackButton
        android:layout_marginTop="20dp"
        android:id="@+id/btn_area_complete"
        android:textColor="@color/home_page_text_color"
        android:layout_gravity="center"
        android:text="@string/complete"
        android:background="@drawable/room_button"
        android:layout_width="120dp"
        android:layout_height="25dp" />

</LinearLayout>