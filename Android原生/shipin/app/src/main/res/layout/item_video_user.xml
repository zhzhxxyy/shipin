<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.duomizhibo.phonelive.ui.customviews.MyImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/space_8"
        android:layout_marginTop="@dimen/space_3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center"
        android:alpha="0.5"
        android:background="@drawable/bg_light_black"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="@dimen/space_5"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:background="@drawable/dingwei"/>

        <TextView
            android:id="@+id/tv_weizhi"
            android:layout_marginRight="@dimen/space_5"
            android:textColor="@color/white"
            android:textSize="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <com.duomizhibo.phonelive.widget.AvatarView
        android:id="@+id/item_tv_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/cover"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/tv_laud_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cover"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:textColor="#fff"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/tv_laud_num"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/tv_laud_num"
        android:src="@drawable/pinglun"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/item_tv_head"
        android:layout_alignLeft="@id/item_tv_head"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_laud_num"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/img"
        android:layout_toRightOf="@id/item_tv_head"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="14sp"
        />
</RelativeLayout>