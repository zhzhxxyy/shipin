<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_img"
        android:background="#F5F5F5"
        android:scaleType="centerCrop"
        android:layout_width="120dp"
        android:layout_height="60dp" />


    <TextView
        android:id="@+id/tv_time"
        android:layout_alignBottom="@+id/iv_img"
        android:layout_alignRight="@+id/iv_img"
        android:text="18:17"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:background="#22000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_title"
        android:textColor="#333333"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:text="マジ軟派、初撮れおな 19歳 03"
        android:maxLines="1"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <com.duomizhibo.phonelive.widget.FontIconView
        android:id="@+id/fi_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_marginTop="15dp"
        android:text="@string/icon_zan2"
        android:textSize="12sp"
        android:textColor="#888"
        />

    <TextView
        android:id="@+id/tv_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="50dp"
        android:text="0"
        android:textSize="12sp"
        android:maxLines="1"
        android:textColor="#888"
        android:layout_toRightOf="@+id/fi_zan"
        android:layout_alignTop="@+id/fi_zan"
        android:layout_marginLeft="4dp"
        />

    <com.duomizhibo.phonelive.widget.FontIconView
        android:id="@+id/fi_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_zan"
        android:layout_toRightOf="@+id/tv_zan"
        android:layout_marginLeft="5dp"
        android:text="@string/icon_see"
        android:textSize="12sp"
        android:textColor="#888"
        />

    <TextView
        android:id="@+id/tv_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="50dp"
        android:text="0"
        android:maxLines="1"
        android:textSize="12sp"
        android:textColor="#888"
        android:layout_alignTop="@+id/fi_click"
        android:layout_toRightOf="@+id/fi_click"
        android:layout_marginLeft="4dp"
        />



</RelativeLayout>



