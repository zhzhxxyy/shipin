<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:background="#f5f5f5"
android:layout_height="match_parent">
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/refresh_layout"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_xuanchuan"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@android:color/white"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/spread"
                android:layout_width="match_parent"
                android:layout_height="150dp" />


            <TextView
                android:id="@+id/tv_reward"
                android:text="1.将宣传链接推送出去，当别人打开您当链接，您将会得到奖励3个金币。"
                android:textSize="12sp"
                android:textColor="#7d7d7d"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_num"
                android:text="2.每天有效当宣传奖励共有100000次，超过限制次数后将没有奖励。"
                android:textSize="12sp"
                android:textColor="#7d7d7d"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_url"
                android:text="http://www.baidu.com"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@drawable/btn_common_border_ef98a7"
                android:textColor="#7d7d7d"
                android:layout_marginTop="8dp"
                android:minHeight="30dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_money"
            android:text="我的总金币：51"

            android:gravity="center"
            android:textSize="14sp"

            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/view_copy"
            android:background="@drawable/btn_common_ef98a7"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="复制链接宣传"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="270dp"
            android:layout_height="45dp" />
    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>


<include
    android:visibility="gone"
    layout="@layout/view_fail"/>


</RelativeLayout>