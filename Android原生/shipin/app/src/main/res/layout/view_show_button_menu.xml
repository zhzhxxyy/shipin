<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/fl_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_10">

        <RelativeLayout
            android:id="@+id/ll_bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_live_chat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_show_live_chat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_mohu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="@dimen/space_10"
                    android:background="@drawable/visiable"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/btn_pingbi"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="@dimen/space_10"
                    android:background="@drawable/nopingbi"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/btn_switch_cam"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/space_3"
                    android:background="@drawable/room_btn_switch_camera"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_stop_rtc"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/space_3"
                    android:background="@drawable/duanmai"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_live_rtc"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/lianmai" />

                <ImageView
                    android:id="@+id/iv_live_meiyan"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/space_2"
                    android:background="@drawable/btn_show_live_meiyan"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl_sixin"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_5">


                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/iv_live_privatechat"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_show_live_message" />

                    <TextView
                        android:id="@+id/iv_live_new_message"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/red_point"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:textSize="10sp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:visibility="gone"
                        />
                </RelativeLayout>

                <ImageView
                    android:layout_marginBottom="@dimen/space_10"
                    android:id="@+id/iv_live_shar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/btn_show_live_shar" />

                <ImageView
                    android:id="@+id/iv_live_gift"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/game_icon_gift" />

                <ImageView
                    android:id="@+id/iv_live_camera_control"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/space_2"
                    android:background="@drawable/gengduo"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_live_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/btn_show_live_back" />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_live_chat_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.duomizhibo.phonelive.widget.BlackButton
                android:id="@+id/tglbtn_danmu_setting"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/tglbtn_live_danmu_setting" />

            <com.duomizhibo.phonelive.widget.BlackEditText
                android:id="@+id/et_live_chat_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="12"
                android:background="@null"
                android:maxLength="50"
                android:padding="4dp"
                android:paddingLeft="5dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12" />

            <com.duomizhibo.phonelive.widget.BlackButton
                android:id="@+id/bt_send_chat"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/global"
                android:text="@string/sendchat"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</merge>