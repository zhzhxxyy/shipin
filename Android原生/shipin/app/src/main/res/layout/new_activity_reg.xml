<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.duomizhibo.phonelive.ui.customviews.ActivityTitle
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:canBack="true"
        app:titleColor="@color/black"
        app:titleText="@string/register" />


    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:padding="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.duomizhibo.phonelive.widget.FontIconView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/icon_zhanghao"
                android:textSize="16sp" />

            <com.duomizhibo.phonelive.widget.BlackEditText

                android:id="@+id/et_username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:layout_weight="5"
                android:background="@null"
                android:hint="用户名"
                android:textColorHint="#E2E2E5" />

        </LinearLayout>
        <View style="@style/h_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.duomizhibo.phonelive.widget.FontIconView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/icon_nicheng"
                android:textSize="16sp" />

            <com.duomizhibo.phonelive.widget.BlackEditText

                android:id="@+id/et_nickname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:layout_weight="5"
                android:background="@null"
                android:hint="用户昵称"
                android:textColorHint="#E2E2E5" />

        </LinearLayout>
        <View style="@style/h_line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.duomizhibo.phonelive.widget.FontIconView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/icon_201"
                android:textSize="16sp" />

            <com.duomizhibo.phonelive.widget.BlackEditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:layout_weight="5"
                android:background="@null"
                android:hint="密码"
                android:inputType="textPassword"
                android:textColorHint="#E2E2E5" />

        </LinearLayout>
        <View style="@style/h_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.duomizhibo.phonelive.widget.FontIconView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/icon_201"
                android:textSize="16sp" />

            <com.duomizhibo.phonelive.widget.BlackEditText
                android:id="@+id/et_confirm_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:layout_weight="5"
                android:background="@null"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:textColorHint="#E2E2E5" />

        </LinearLayout>
        <View style="@style/h_line" />

    </LinearLayout>


    <com.duomizhibo.phonelive.widget.BlackButton
        android:id="@+id/btn_doregister"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_below="@+id/ll_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_common_new"
        android:text="@string/register"
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_doregister"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/btn_dologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="center"
            android:text="已有账号，登录"
            android:textColor="@color/main_black" />
    </RelativeLayout>


</RelativeLayout>