<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#E5E6E6"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_title"
            android:text="マジ軟派、初撮れおな 19歳 414"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_width="0dp"
            android:maxLines="1"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_money"
            android:text="20金币"
            android:textSize="12sp"
            android:textColor="#333333"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:gravity="right"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_detail"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="标题："
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detail_title"
                android:textSize="14sp"
                android:textColor="#3b9eff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=" マジ軟派、初撮れおな 19歳 414"
                android:minHeight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:background="@drawable/dash_line_color_ddd"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1.5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:minHeight="35dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="时间："
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detail_time"
                android:textSize="14sp"
                android:textColor="#888888"
                android:gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="2019-09-09 09：09：09"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@drawable/dash_line_color_ddd"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1.5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:minHeight="35dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="分类："
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detail_class"
                android:textSize="14sp"
                android:textColor="#888888"
                android:gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="VIP专区"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@drawable/dash_line_color_ddd"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1.5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:minHeight="35dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="操作IP："
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detail_ip"
                android:textSize="14sp"
                android:textColor="#888888"
                android:gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="127.0.0.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


    <View
        android:background="#d8d8d8"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>