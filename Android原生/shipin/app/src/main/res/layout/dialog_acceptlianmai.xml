<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:layout_marginTop="30dp"
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="欢哥"
            android:textColor="@color/black" />

        <TextView
            android:textColor="@color/gray2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_10"
            android:text="向您发起私播请求" />

        <LinearLayout
            android:padding="@dimen/space_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/gray2"
                android:drawablePadding="@dimen/space_3"
                android:id="@+id/tv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/answer"
                android:gravity="center"
                android:text="接听" />

            <View
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_1" />

            <TextView
                android:textColor="@color/gray2"
                android:drawablePadding="@dimen/space_3"
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/hangup2"
                android:gravity="center"
                android:text="挂断" />
        </LinearLayout>

    </LinearLayout>

    <com.duomizhibo.phonelive.widget.AvatarView
        android:id="@+id/av_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/qingxin"
        app:border_color="@color/global2"
        app:border_width="@dimen/space_1" />

</RelativeLayout>