<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/vp_seek_background_color" />
            <size android:height="@dimen/vp_seek_height" />
            <corners android:radius="@dimen/vp_seek_radius" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid android:color="@color/vp_seek_buffering_color" />
                <size android:height="@dimen/vp_seek_height" />
                <corners android:radius="@dimen/vp_seek_radius" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/vp_seek_progress_color" />
                <size android:height="@dimen/vp_seek_height" />
                <corners android:radius="@dimen/vp_seek_radius" />
            </shape>
        </clip>
    </item>
</layer-list>
