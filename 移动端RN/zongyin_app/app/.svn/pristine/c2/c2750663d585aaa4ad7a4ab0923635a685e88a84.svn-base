    render(){

        let transferIn=0;
        let transferOut=0;
        if (this.state.reportstatisticsData != null) {
            transferIn = this.state.reportstatisticsData['transferIn']
            transferOut = this.state.reportstatisticsData['transferOut']
        }
        let totalnum=0;
        let totalamount=0;
        if (this.state.downuserportsData != null) {
            totalnum = this.state.downuserportsData['totalnum']
            totalamount = this.state.downuserportsData['totalamount']
        }

        return(
            <View style={{width:sys.dwidth,height:sys.dheight,backgroundColor:sys.backgroundColor}}>


            <View style={{backgroundColor:sys.backgroundColor}}>
                <View style={{width:sys.dwidth,backgroundColor:sys.mainColor,paddingBottom:35,flexDirection:'row',height:140}}>
                    <View style={{width:sys.dwidth*2/3}}>
                        <Text style={{marginTop:15,paddingLeft:10,color:'white',fontSize:13}}>我的下级(人)</Text>
                        <Text style={{marginTop:10,paddingLeft:10,color:'white',fontSize:18}}>{totalnum}</Text>
                        <Text style={{marginTop:10,paddingLeft:10,color:'white',fontSize:13}}>团队余额(元)</Text>
                        <Text style={{marginTop:10,paddingLeft:10,color:'white',fontSize:13}}>{totalamount}</Text>        
                    </View>

                    <View style={{height:140,width:sys.dwidth/3}}>
                        
                        <TouchableOpacity style={{marginLeft:10,marginTop:(140-37)/2,height:37,
                            width:sys.dwidth/3-10,backgroundColor:sys.redColor,
                            borderTopLeftRadius:37/2,borderBottomLeftRadius:37/2,}} onPress={()=>this.clickfourBtn(6)}>
                            <Text style={{marginTop:11,textAlign:'center',color:sys.whiteColor,
                            fontSize:14,alignSelf:'center',width:sys.dwidth/3-10}}>团队报表</Text>
                        </TouchableOpacity>

                    </View>

                </View>

           {/* // <View style={{height:1,width:sys.dwidth,backgroundColor:'black'}}></View> */}

                <View style={{width:sys.dwidth,backgroundColor:sys.mainColor
                    ,flexDirection:'row',height:55,marginTop:1}}>
                    <View style={{width:sys.dwidth/2,height:55}}>
                    <Text style={{marginTop:10,textAlign:'center',color:'white',fontSize:13}}>充值量(元)</Text>
                    <Text style={{marginTop:5,textAlign:'center',color:'white',fontSize:13}}>{transferIn}</Text>
                    </View>

                    <View style={{width:sys.dwidth/2,height:55}}>
                    <Text style={{marginTop:10,textAlign:'center',color:'white',fontSize:13}}>提现量(元)</Text>
                    <Text style={{marginTop:5,textAlign:'center',color:'white',fontSize:13}}>{transferOut}</Text>
