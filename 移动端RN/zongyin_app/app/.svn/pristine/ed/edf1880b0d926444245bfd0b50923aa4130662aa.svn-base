    _checkAndroidPermission = async() => {
        try {
            const rationale = {
                'title': '麦克风权限',
                'message': '需要权限录制语音.'
            }
            const granted = await PermissionsAndroid.request(PermissionsAndroid.PERMISSIONS.RECORD_AUDIO, rationale)
            this.setState({ hasPermission: granted === PermissionsAndroid.RESULTS.GRANTED })
        } catch (e) {
            console.log(e)
        }
    }

